{
  "name": "chai-ip",
  "version": "2.0.0",
  "description": "Extend Chai Assertion library with tests for ip addresses",
  "author": "Julian Grinblat <julian@dotcore.co.il>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "keywords": [
    "chai",
    "chai-plugin",
    "browser",
    "ip"
  ],
  "files": [
    "index.js",
    "types/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#is-ip": {
      "node": "net",
      "browser": "is-ip"
    }
  },
  "types": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:dotcore64/chai-ip.git"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "test:types": "tsc -p types",
    "test:node": "mocha",
    "test:browser": "karma start karma.conf.cjs --single-run --no-auto-watch",
    "test": "npm run test:types && npm run test:node && npm run test:browser",
    "cover": "npm run test:types && c8 npm run test:node && npm run test:browser"
  },
  "dependencies": {
    "is-ip": "^5.0.1"
  },
  "peerDependencies": {
    "chai": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/chai": "^4.3.19",
    "@types/node": "^22.0.2",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.4.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-firefox-launcher": "^2.1.3",
    "karma-mocha": "^2.0.1",
    "karma-node-resolve-preprocessor": "^0.3.0",
    "karma-rollup-preprocessor": "^7.0.8",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "^0.0.36",
    "mocha": "^10.7.0",
    "puppeteer": "^22.15.0",
    "rollup": "^4.21.2",
    "typescript": "^5.5.4"
  }
}
